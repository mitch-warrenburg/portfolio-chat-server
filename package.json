{
  "name": "portfolio-chat-server",
  "version": "0.0.1",
  "description": "A websocket-based chat server for the https://mitch.engineering portfolio site.",
  "author": "Mitch Warrenburg <mitchwarrenburg@protonmail.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": "14"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/connect-redis": "^0.0.16",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/ioredis": "^4.22.0",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.20",
    "@types/passport": "^1.0.6",
    "@types/passport-http": "^0.3.8",
    "@types/passport-local": "^1.0.33",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.6",
    "tslib": "^2.1.0",
    "tsutils": "^3.21.0",
    "typescript": "^4.2.3",
    "yarn-run-all": "^3.1.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.1.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "ioredis": "^4.24.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "redis": "^3.0.2",
    "socket.io": "^4.0.0",
    "socket.io-redis": "^6.1.0",
    "winston": "^3.3.3"
  },
  "scripts": {
    "start": "NODE_ENV=development tsnd --respawn --deps --cls --exit-child --rs --pretty --log-error src/main.ts",
    "start:debug": "DEBUG=socket.io:client* yarn start",
    "clean": "rimraf coverage build tmp",
    "build": "yarn clean && tsc --outDir build --noEmit false && cp .env build",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "ts": "tsc",
    "lint": "eslint --fix 'src/**/*.{js,ts,jsx,tsx}'",
    "format": "prettier --write 'src/**/*.{js,ts,jsx,tsx}'",
    "tidy": "run-s ts format lint && git add ."
  }
}
